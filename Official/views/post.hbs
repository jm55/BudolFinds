    <body>
        <header class="card brand_banner">
            <div class="banner_left">
                <p class="banner_title"><a id="logo-btn">Budol Finds</a></p>
                <nav class="menu">
                    <button id="home-btn" class="menu_button">Home</button>
                    {{>categories}}
                    <input id="search-txt" name="search-txt" class="textfield" />
                    <button id="search-btn" class="menu_button">Search</button>
                    <button id="account-settings-btn" class="menu_button">Settings</button>
                    <button id="logout-btn" class="menu_button">Logout</button>
                </nav>
            </div>
            <div class="banner_right">
                <a id="userbutton"><img id="profile-pic" class="profilepic" src="../img/default/default_dp.png"></a>
            </div>
        </header>

        <div class="card edit_post">
            <form name="postForm" id="post-form" class="edit_post_form">
                <label>Post Content:</label>
                <textarea name="post-content" id="post-content" class="edit_post_description"></textarea>
                <label>Category:</label>
                {{>categories}}
                <label>Link Label:</label>
                <input id="post-label" name="post-label" type="text" class="textfield">
                <label>Link:</label>
                <input id="post-link" name="post-link" type="text" class="textfield">
                <label>Image:</label>
                <img id="post-image" class="edit_post_image" src="" alt="" style="display:none;">
                <input id="post-img-select" name="post-img-select" type="file" accept="image/*"/>
                <div class="interact">
                    <input id="save-post-btn" type="button" class="button" value="Save">
                    <input id="delete-post-btn" type="button" class="button" value="Delete">
                    <input id="cancel-post-btn" type="button" class="button" value="Cancel">
                </div>
            </form>
        </div>

    </body>
</html>
